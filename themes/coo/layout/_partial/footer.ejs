                            <div class="min-w-0 flex-1">
                                <h4 class="font-medium text-sm text-slate-900 dark:text-slate-100 group-hover:text-purple-600 dark:group-hover:text-purple-400">Fiona AI</h4>
                                <p class="text-xs text-slate-500 dark:text-slate-400 truncate">Your AI assistant in chrome</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Logo Area -->
                <div class="text-left">
                    <div class="mb-4">
                        <%- partial('_partial/index/logo', { icon: true, theme: 'light' }) %>
                    </div>
                    <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
