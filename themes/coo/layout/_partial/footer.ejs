<footer class="text-slate-700 dark:text-slate-300 bg-slate-200 dark:bg-slate-800 md:mt-14">
    <% if (page.layout !== "note" && !page._isNotePagination) { %>
        <div class="max-container mb-8 md:py-10 mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 xl:gap-8">
                <!-- Top Cheatsheet -->
                <div>
                    <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4 flex items-center">
                        Top <span class="text-slate-500">&nbsp;Cheatsheet</span>
                    </h3>
                    <div class="space-y-3">
                        <% 
                        const topPostsData = topPosts(3);
                        topPostsData.forEach(function(post, index) { 
                        %>
                            <a href="<%- url_for(post.path) %>" class="group flex items-center p-3 bg-white dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 hover:border-indigo-300 dark:hover:border-indigo-500 transition-all duration-200 hover:shadow-md">
                                <div class="w-8 h-8 flex items-center justify-center flex-shrink-0 mr-3 text-indigo-600">
                                    <%- icon(post.slug) %>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <h4 class="font-medium text-sm text-slate-900 dark:text-slate-100 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 truncate">
                                        <%= post.title %> <span class="text-slate-400">Cheatsheet</span>
                                    </h4>
                                    <p class="text-xs text-slate-500 dark:text-slate-400">Popular Quick Reference</p>
                                </div>
                            </a>
                        <% }); %>
                    </div>
                </div>

                <!-- Recent Cheatsheet -->
